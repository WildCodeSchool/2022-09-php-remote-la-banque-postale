{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<a class="siteButton" href="{{ path('app_admin') }}" title="retour">Retour au panneau général</a>
	<div class="marginPage">
		<h1>Administation des utilisateurs</h1>
		<div class="containerButtonCentered">
			<a class="validationButton" href="{{ path('app_user_new') }}" title="créer">Créer un nouvel utilisateur</a>
		</div>
		<table class="table mt-5">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Prénom</th>
					<th>Nom de Famille</th>
					<th>Avatar</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.firstname }}</td>
						<td>{{ user.lastname }}</td>
						<td>{{ user.avatar }}</td>
						<td class="text-end">
							<div class="d-inline-flex">
								<div class="d-flex align-self-center p-2">
									<a class="showButton" href="{{ path('app_user_show', {'id': user.id}) }}" title="voir">Voir</a>
								</div>
								<div class="d-flex align-self-center p-2">
									<a class="editButton" href="{{ path('app_user_edit', {'id': user.id}) }}" title="éditer">Éditer</a>
								</div>
								<div class="d-flex align-self-center p-2">
									{{ include('user/_delete_form.html.twig') }}
								</div>
							</div>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
