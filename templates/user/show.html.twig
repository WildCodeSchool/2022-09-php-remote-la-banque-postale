{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<a class="siteButton" href="{{ path('app_user_index') }}" title="retour">Retour à la liste des utilisateurs</a>
	<div class="marginPage">
		<h1>Utilisateur</h1>
		<div class="containerButtonCentered mt-3">
			<div class="d-inline-flex">
				<div class="d-flex align-self-center p-2">
					<a class="editButton" href="{{ path('app_user_edit', {'id': user.id}) }}" title="éditer l'utilisateur">Éditer l'utilisateur</a>
				</div>
				<div class="d-flex align-self-center p-2">
					{{ include('user/_delete_form.html.twig') }}
				</div>
			</div>
		</div>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ user.id }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ user.email }}</td>
				</tr>
				<tr>
					<th>Roles</th>
					<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
				</tr>
				<tr>
					<th>Firstname</th>
					<td>{{ user.firstname }}</td>
				</tr>
				<tr>
					<th>Lastname</th>
					<td>{{ user.lastname }}</td>
				</tr>
				<tr>
					<th>Avatar</th>
					<td>{{ user.avatar }}</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
