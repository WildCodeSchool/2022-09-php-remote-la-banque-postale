{% extends 'base.html.twig' %}

{% block title %}Question
{% endblock %}

{% block body %}
	<a class="siteButton" href="{{ path('app_question_index') }}" title="retour">Retour à la liste des questions</a>
	<div class="marginPage">
		<h1>Question</h1>
		<div class="containerButtonCentered mt-3">
			<div class="d-inline-flex">
				<div class="d-flex align-self-center p-2">
					<a class="editButton" href="{{ path('app_question_edit', {'id': question.id}) }}" title="éditer">Editer</a>
				</div>
				<div class="d-flex align-self-center p-2">
					{{ include('question/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ question.id }}</td>
				</tr>
				<tr>
					<th>Content</th>
					<td>{{ question.content }}</td>
				</tr>
			</tbody>
		</table>

	</div>
{% endblock %}
