{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ ticket.content }}</td>
            </tr>
            <tr>
                <th>SubmitedAt</th>
                <td>{{ ticket.submitedAt ? ticket.submitedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_app_ticket_index') }}">Retour à la liste des tickets</a>

    <a href="{{ path('admin_app_ticket_edit', {'id': ticket.id}) }}">Éditer le ticket</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
