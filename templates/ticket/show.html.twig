{% extends 'base.html.twig' %}

{% block title %}Ticket
{% endblock %}

{% block body %}
	<a class="siteButton" href="{{ path('admin_app_ticket_index') }}" title="retour">Retour à la liste des tickets</a>
	<div class="marginPage">
		<h1>Ticket</h1>
		<div class="containerButtonCentered mt-3">
			<div class="d-inline-flex">
				<div class="d-flex align-self-center p-2">
					<a class="editButton" href="{{ path('admin_app_ticket_edit', {'id': ticket.id}) }}" title="Editer">Éditer le ticket</a>
				</div>
				<div class="d-flex align-self-center p-2">
					{{ include('ticket/_delete_form.html.twig') }}
				</div>
			</div>
		</div>
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ ticket.id }}</td>
				</tr>
				<tr>
					<th>Content</th>
					<td>{{ ticket.content|raw }}</td>
				</tr>
				<tr>
					<th>SubmitedAt</th>
					<td>{{ ticket.submitedAt ? ticket.submitedAt|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
