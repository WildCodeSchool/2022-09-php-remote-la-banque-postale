{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
	<h1>Administation des categories</h1>
	<div class="topOfPageButton">
		<a class="siteButton" href="{{ path('app_admin') }}">Retour au panneau général</a>
	</div>
	<div class="topOfPageButton">
		<a class="validationButton" href="{{ path('app_category_new') }}">Créer une nouvelle catégorie</a>
	</div>
	<div class="container">
		<div class="d-flex justify-content-center align-items-center">
			<table class="adminPanelTable" align="center">
				<thead>
					<tr>
						<th>Id</th>
						<th>Label</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					{% for category in categories %}
						<tr>
							<td>{{ category.id }}</td>
							<td>{{ category.label }}</td>
							<td>
								<div class="d-inline-flex">
									<div class="d-flex align-self-center p-2">
										<a class="showButton" href="{{ path('category_level_show', {'slug': category.slug}) }}">Voir</a>
									</div>
									<div class="d-flex align-self-center p-2">
										<a class="editButton" href="{{ path('app_category_edit', {'id': category.id}) }}">Éditer</a>
									</div>
									<div class="d-flex align-self-center p-2">
										{{ include('category/admincategory/_delete_form.html.twig') }}
									</div>
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</div>
		</div>
	</tbody>
</table>{% endblock %}
