{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
	<a class="siteButton" href="{{ path('app_admin') }}" title="retour">Retour au panneau général</a>
	<div class="marginPage">
		<h1>Administation des categories</h1>
		<div class="containerButtonCentered">
			<a class="validationButton" href="{{ path('app_category_new') }}" title="créer une catégorie">Créer une nouvelle catégorie</a>
		</div>
		<div class="container">
			<div class="d-flex justify-content-center align-items-center">
				<table class="table" align="center">
					<thead>
						<tr>
							<th>Id</th>
							<th>Label</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
							<tr>
								<td>{{ category.id }}</td>
								<td>{{ category.label }}</td>
								<td class="text-end">
									<div class="d-inline-flex">
										<div class="d-flex align-self-center p-2">
											<a class="showButton" href="{{ path('admin_app_category_show', {'slug': category.slug}) }}" title="voir">Voir</a>
										</div>
										<div class="d-flex align-self-center p-2">
											<a class="editButton" href="{{ path('app_category_edit', {'id': category.id}) }}" title="éditer">Éditer</a>
										</div>
										<div class="d-flex align-self-center p-2">
											{{ include('category/admincategory/_delete_form.html.twig') }}
										</div>
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		{% endblock %}
