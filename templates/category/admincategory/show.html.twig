{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Label de la catégorie</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

<ul>
    <li><a href="{{ path('app_category_index') }}">Retourner à la liste des catégories</a></li>
    <li><a href="{{ path('app_category_edit', {'id': category.id}) }}">Éditer la catégorie</a></li>
    <li>{{ include('category/admincategory/_delete_form.html.twig') }}</li>
</ul>



{% endblock %}
