{% extends 'base.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<a class="siteButton" href="{{ path('admin_app_category_index') }}" title="retour">Retour à la liste des catégories</a>
	<div class="marginPage">
		<h1>Categorie</h1>
		<div class="containerButtonCentered mt-3">
			<div class="d-inline-flex">
				<div class="d-flex align-self-center p-2">
					<a class="editButton" href="{{ path('app_category_edit', {'id': category.id}) }}" title="éditer">Éditer la catégorie</a>
				</div>
				<div class="d-flex align-self-center p-2">
					{{ include('category/admincategory/_delete_form.html.twig') }}
				</div>
			</div>
		</div>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ category.id }}</td>
				</tr>
				<tr>
					<th>Label de la catégorie</th>
					<td>{{ category.label }}</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
