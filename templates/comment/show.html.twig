{% extends 'base.html.twig' %}

{% block title %}Comment
{% endblock %}

{% block body %}
	<a class="siteButton" href="{{ path('app_comment_index') }}" title="retour">Retour à la liste des commentaires</a>
	<div class="marginPage">
		<h1>Commentaire</h1>
		<div class="containerButtonCentered mt-3">
			<div class="d-inline-flex">
				<div class="d-flex align-self-center p-2">
					<a class="editButton" href="{{ path('app_comment_edit', {'id': comment.id}) }}" title="éditer le commentaire">Éditer le commentaire</a>
				</div>
				<div class="d-flex align-self-center p-2">
					{{ include('comment/_delete_form.html.twig') }}
				</div>
			</div>
		</div>

		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ comment.id }}</td>
				</tr>
				<tr>
					<th>Id du tutoriel</th>
					<td>{{ comment.tutoriel.id }}</td>
				</tr>
				<tr>
					<th>Texte</th>
					<td>{{ comment.text|raw }}</td>
				</tr>
			</tbody>
		</table>


	{% endblock %}
