{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}


{% block body %}
	<div class="d-block pink-stripe-not-height">

		<h2 class="mt-4 fst-italic me-3 ms-3 pt-3">
			+100 tutos pour devenir autonome sur son smartphone et son ordinateur
		</h2>
	</div>

	<div class="containerButtonCentered">
		<a class="siteButton fs-2 mt-5" href="{{ path('app_register') }}" title="créer son profil">Créer son espace personnel</a>
	</div>

	<div>
		<h3 class="mt-4 mb-4 fs-2 fst-italic d-flex flex-row justify-content-center">ou</h3>
	</div>

	<div class="registercontainer d-flex flex-column justify-content-center align-items-center p-2 gap-2">
		<h2>Se connecter</h2>
		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path('app_login') }}" method="post" class="d-flex flex-column gap-2 align-items-center w-100">
			<div class="d-flex flex-row justify-content-end gap-2 w-100">
				<label class="w-25" for="username">Email:</label>
				<input class="col" type="text" id="username" name="_username" value="{{ last_username }}">
			</div>

			<div class="d-flex flex-row justify-content-end gap-2 w-100">
				<label class="w-25" for="password">Password:</label>
				<input class="col" type="password" id="password" name="_password">
			</div>
            <input type="hidden" name="_target_path" value="{{ path('app_category_index') }}">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="siteButton m-1 w-50 justify-self-center" type="submit" title="se connecter">Se connecter</button>
		</form>
	</div>

{% endblock %}
