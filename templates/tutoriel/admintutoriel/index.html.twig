{% extends 'base.html.twig' %}

{% block title %}Tutoriel index
{% endblock %}

{% block body %}

	<h1>Administration des tutoriels</h1>

	<a class="editButton" href="{{ path('app_tutoriel_new') }}">Créer un nouveau tutoriel</a>

	{% for level in levels %}

		<h2 class="mt-5">Fiches de niveau
			{{level.name}}</h2>

		<table class="adminPanelTable">
			<thead>
				<tr>
					<th>Id</th>
					<th>Title</th>
					<th>Description</th>
					<th>Level</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>

				{% for tutoriel in tutoriels %}
					{% if level.name == tutoriel.level.name %}

						<tr>
							<td>{{ tutoriel.id }}</td>
							<td>{{ tutoriel.title }}</td>
							<td>{{ tutoriel.description|raw }}</td>
							<td>{{ tutoriel.level.name}}</td>
							<td>
								<div class="d-inline-flex">
									<div class="d-flex align-self-center p-2">
										<a class="showButton" href="{{ path('app_tutoriel_show', {'id': tutoriel.id}) }}" aria-label="voir">Voir</a>
									</div>
									<div class="d-flex align-self-center p-2">
										<a class="editButton" href="{{ path('app_tutoriel_edit', {'id': tutoriel.id}) }}" aria-label="editer">Éditer</a>
									</div>
									<div class="d-flex align-self-center p-2">
										{{ include('tutoriel/admintutoriel/_delete_form.html.twig') }}
									</div>
								</div>
							</td>
						</tr>
					{% endif %}
				{% endfor %}

			</tbody>
		</table>

	{% endfor %}

{% endblock %}
