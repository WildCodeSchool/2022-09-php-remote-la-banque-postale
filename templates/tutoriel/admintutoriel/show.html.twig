{% extends 'base.html.twig' %}

{% block title %}Tutoriel
{% endblock %}

{% block body %}

	<a class="siteButton" href="{{ path('app_tutoriel_index') }}" title="retour">Retour à la liste des tutoriels</a>

	<h1>Tutoriel</h1>
	<div class="containerButtonCentered mt-3">
		<div class="d-inline-flex">
			<div class="d-flex align-self-center p-2">
				<a class="editButton"
                   href="{{ path('app_tutoriel_edit', {'id': tutoriel.id}) }}"
                   data-no-swup=""
                   title="éditer">Éditer le tutoriel</a>
			</div>
			<div class="d-flex align-self-center p-2">
				{{ include('tutoriel/admintutoriel/_delete_form.html.twig') }}
			</div>
		</div>
	</div>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ tutoriel.id }}</td>
			</tr>
			<tr>
				<th>Titre</th>
				<td>{{ tutoriel.title }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ tutoriel.description|raw }}</td>
			</tr>
			<tr>
				<th>Contenu</th>
				<td>{{ tutoriel.content|raw }}</td>
			</tr>
		</tbody>
	</table>


{% endblock %}
